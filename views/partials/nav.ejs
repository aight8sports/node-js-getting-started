<div id="alert" style="position: absolute; top: 0; right: 30%; width: 50%;"></div>


<script>
  var alertEl = $('#alert')
  function hide() { setTimeout(() => alertEl.fadeOut(), 2000) }
  function showSuccess(msg) {
    alertEl.html(`<div class="alert alert-success" role="alert">${msg}!</div>`)
    hide()
  }
  function showError(msg) {
    alertEl.html(`<div class="alert alert-danger" role="alert">${msg}!</div>`)
    hide()
  }

</script>